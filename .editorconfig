# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
# isort config
atomic = true
multi_line_output = 5
line_length = 100
combine_as_imports = true
skip = wsgi.py,docs,bower_components,node_modules
known_third_party =

[Makefile]
indent_style = tab
indent_size = 4
